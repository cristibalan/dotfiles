# common
alias vi="v"
alias vim="v"
alias gvim="g"
alias c="clear"
alias l="ls -AGlFT"
alias lt="ls -AGlFTtr"
alias g?="grep -e $1"
alias gem="sudo gem"
alias macgem="sudo macgem"
alias git=hub
#alias cd="cd && git status"

# bash
alias reload="source ~/.profile"
alias rc='v ~/.profile && source ~/.profile'
alias lc="cl"
function cl() { cd "$@" && l; }
function cs () {
  cd "$@"
  if [ -n "$(git status 2>/dev/null)" ]; then
    echo "$(git status 2>/dev/null)"
  fi
}
#function cl () {
#   if [ $# = 0 ]; then
#      cd && l
#   else
#      cd "$*" && l
#   fi
#}
function mkd() {
  mkdir -p "$*" && cd "$*"
}

# make top default to ordering by CPU usage:
alias top='top -ocpu'
# more lightweight version of top which doesn't use so much CPU itself:
alias ttop='top -ocpu -R -F -s 2 -n30'

